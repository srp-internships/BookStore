{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5281"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/getaway/books",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/books",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5162
        }
      ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "Limit": 100,
        "PeriodTimespan": 10
      }
    },
    {
      "UpstreamPathTemplate": "/getaway/books/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/books/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5162
        }
      ],
      "FileCacheOptions": {
        "TtlSeconds": 10
      }
    },
    {
      "UpstreamPathTemplate": "/getaway/books",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/books",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5162
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/getaway/books/{id}",
      "UpstreamHttpMethod": [ "Get", "Delete" ],
      "DownstreamPathTemplate": "/api/books/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5162
        }
      ]
    }
  ]
}
